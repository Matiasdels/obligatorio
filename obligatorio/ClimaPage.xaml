<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="obligatorio.ClimaPage"
             Title="Clima en Punta del Este">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">

            <Label x:Name="lblCity"
                   Text="Ciudad"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Image x:Name="imgIcon"
                   WidthRequest="100"
                   HeightRequest="100"
                   HorizontalOptions="Center" />

            <Label x:Name="lblTemp"
                   Text="0°C"
                   FontSize="36"
                   HorizontalOptions="Center" />

            <Label x:Name="lblDescription"
                   Text="Descripción del clima"
                   FontSize="18"
                   HorizontalOptions="Center" />

            <Button Text="Actualizar"
                    Clicked="OnActualizarClicked"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="10" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>