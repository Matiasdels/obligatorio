<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="obligatorio.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:obligatorio"
    Shell.FlyoutBehavior="Disabled"
    Title="obligatorio">


    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <FlyoutItem Title="Clima">
        <ShellContent ContentTemplate="{DataTemplate local:ClimaPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Cotizaciones">
        <ShellContent ContentTemplate="{DataTemplate local:CotizacionesPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Noticias">
        <ShellContent ContentTemplate="{DataTemplate local:NoticiasPage}" />
    </FlyoutItem>

</Shell>
