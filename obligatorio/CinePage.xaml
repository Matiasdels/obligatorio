<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="obligatorio.CinePage" 
             Title="Películas en cartelera"
             BackgroundColor="{StaticResource AppBackgroundDark}">

    <ContentPage.Resources>
        <ResourceDictionary>

            <Style x:Key="MovieRatingLabel" TargetType="Label">
                <Setter Property="TextColor" Value="#FCD34D"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Frame Grid.Row="0" Style="{StaticResource AppHeaderFrame}">
            <Label Text="🎬 Películas en Cartelera" 
                   Style="{StaticResource AppTitleLabel}"
                   FontSize="22"
                   HorizontalOptions="Center"/>
        </Frame>


        <Frame Grid.Row="1" 
               Style="{StaticResource AppBaseFrame}"
               CornerRadius="20"
               Margin="20,15,20,10"
               Padding="5">
            <SearchBar x:Name="MovieSearchBar"
                      Placeholder="🔍 Buscar películas..."
                      Style="{StaticResource AppSearchBar}"
                      TextChanged="OnSearchTextChanged"/>
        </Frame>


        <CollectionView Grid.Row="2" 
                       x:Name="MoviesCollection"
                       Margin="0,5,0,0">

            <CollectionView.ItemTemplate>
                <DataTemplate>
    
                    <Frame Style="{StaticResource AppCardFrame}" Margin="15,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                 
                            <Frame Grid.Column="0" 
                                   BackgroundColor="{StaticResource AppBackgroundLight}"
                                   CornerRadius="12"
                                   Padding="0"
                                   HasShadow="False"
                                   Margin="10">
                                <Image Source="{Binding PosterPath}" 
                                       Style="{StaticResource AppPosterImage}"
                                       HeightRequest="160"
                                       WidthRequest="100"/>
                            </Frame>

               
                            <StackLayout Grid.Column="1" 
                                       VerticalOptions="FillAndExpand"
                                       Padding="10,15,15,15">

              
                                <Label Text="{Binding Title}" 
                                       Style="{StaticResource AppSubtitleLabel}"
                                       FontSize="16"
                                       Margin="0,0,0,8"/>

              
                                <Label Text="{Binding Overview}" 
                                       MaxLines="4" 
                                       LineBreakMode="TailTruncation"
                                       Style="{StaticResource AppBodyLabel}"
                                       FontSize="13"
                                       VerticalOptions="FillAndExpand"/>

             
                                <Label Text="{Binding VoteAverage, StringFormat='⭐ {0:F1}/10'}" 
                                       Style="{StaticResource MovieRatingLabel}"
                                       IsVisible="{Binding VoteAverage, Converter={StaticResource IsNotZeroConverter}}"/>
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>


            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center" 
                           HorizontalOptions="Center"
                           Padding="40">
                    <Label Text="🔍" 
                           FontSize="48" 
                           HorizontalOptions="Center"/>
                    <Label Text="No se encontraron películas" 
                           Style="{StaticResource AppSubtitleLabel}"
                           FontSize="16"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

     
        <Button Grid.Row="3"
                x:Name="btnAtras" 
                Text="← Volver atrás" 
                Clicked="btnCineAtras_Clicked"
                Style="{StaticResource AppPrimaryButton}"
                HeightRequest="45"
                Margin="20,10,20,15"/>
    </Grid>
</ContentPage>