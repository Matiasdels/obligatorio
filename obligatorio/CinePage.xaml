<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="obligatorio.CinePage" 
             Title="Películas en cartelera"
             BackgroundColor="#0F1729">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Estilo para las tarjetas de películas -->
            <Style x:Key="MovieCardFrame" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#1E3A8A"/>
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="CornerRadius" Value="15"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="15,10"/>
            </Style>

            <!-- Estilo para títulos -->
            <Style x:Key="MovieTitleLabel" TargetType="Label">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Margin" Value="15,10,15,5"/>
            </Style>

            <!-- Estilo para descripciones -->
            <Style x:Key="MovieOverviewLabel" TargetType="Label">
                <Setter Property="TextColor" Value="#93C5FD"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Margin" Value="15,0,15,15"/>
            </Style>

            <!-- Estilo para botón -->
            <Style x:Key="BackButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#2563EB"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="25"/>
                <Setter Property="HeightRequest" Value="45"/>
                <Setter Property="Margin" Value="20,10,20,15"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Frame Grid.Row="0" 
               BackgroundColor="#1E40AF" 
               HasShadow="True" 
               
               Padding="20,15">
            <Label Text="🎬 Películas en Cartelera" 
                   TextColor="White" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Buscador -->
        <Frame Grid.Row="1" 
               BackgroundColor="#1E3A8A" 
               CornerRadius="20"
               Margin="20,15,20,10"
               Padding="5"
               HasShadow="False">
            <SearchBar x:Name="MovieSearchBar"
                      Placeholder="🔍 Buscar películas..."
                      BackgroundColor="Transparent"
                      TextColor="White"
                      PlaceholderColor="#93C5FD"
                      CancelButtonColor="#60A5FA"
                      FontSize="16"
                      TextChanged="OnSearchTextChanged"/>
        </Frame>

        <!-- Lista de películas -->
        <CollectionView Grid.Row="2" 
                       x:Name="MoviesCollection"
                       Margin="0,5,0,0">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Style="{StaticResource MovieCardFrame}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Imagen del poster -->
                            <Frame Grid.Column="0" 
                                   BackgroundColor="#334155"
                                   CornerRadius="12"
                                   Padding="0"
                                   HasShadow="False"
                                   Margin="10">
                                <Image Source="{Binding PosterPath}" 
                                       Aspect="AspectFill"
                                       HeightRequest="160"
                                       WidthRequest="100"/>
                            </Frame>

                            <!-- Información de la película -->
                            <StackLayout Grid.Column="1" 
                                       VerticalOptions="FillAndExpand"
                                       Padding="10,15,15,15">

                                <!-- Título -->
                                <Label Text="{Binding Title}" 
                                       Style="{StaticResource MovieTitleLabel}"
                                       Margin="0,0,0,8"/>

                                <!-- Descripción -->
                                <Label Text="{Binding Overview}" 
                                       MaxLines="4" 
                                       LineBreakMode="TailTruncation"
                                       Style="{StaticResource MovieOverviewLabel}"
                                       VerticalOptions="FillAndExpand"/>

                                <!-- Rating (si está disponible) -->
                                <Label Text="{Binding VoteAverage, StringFormat='⭐ {0:F1}/10'}" 
                                       TextColor="#FCD34D" 
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       Margin="0,5,0,0"
                                       IsVisible="{Binding VoteAverage, Converter={StaticResource IsNotZeroConverter}}"/>
                            </StackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <!-- Mensaje cuando no hay películas -->
            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center" 
                           HorizontalOptions="Center"
                           Padding="40">
                    <Label Text="🔍" 
                           FontSize="48" 
                           HorizontalOptions="Center"/>
                    <Label Text="No se encontraron películas" 
                           TextColor="#93C5FD" 
                           FontSize="16" 
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Botón de retroceso -->
        <Button Grid.Row="3"
                x:Name="btnAtras" 
                Text="← Volver atrás" 
                Clicked="btnCineAtras_Clicked"
                Style="{StaticResource BackButtonStyle}"/>
    </Grid>
</ContentPage>