<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="obligatorio.RegistroPage"
             Title="Registro de Usuario"
             BackgroundColor="{StaticResource BackgroundLight}">

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto" Padding="20" RowSpacing="20">

            <StackLayout Grid.Row="0" Spacing="10" Margin="0,30,0,20">
                <Label Text="Registro de Usuario"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{StaticResource PrimaryBlueDark}" />
                <Label Text="Completa los campos para crear tu cuenta"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="{StaticResource Gray500}" />
            </StackLayout>

            <StackLayout Grid.Row="1" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">

                <Frame BackgroundColor="{StaticResource White}"
                       HasShadow="True"
                       CornerRadius="15"
                       Padding="0"
                       MaximumWidthRequest="350"
                       HorizontalOptions="Fill">
                    <Entry x:Name="txtUsuario"
                           Placeholder="Usuario"
                           FontSize="16"
                           TextColor="{StaticResource Gray600}"
                           PlaceholderColor="{StaticResource Gray400}"
                           HeightRequest="50"
                           BackgroundColor="Transparent"/>
                </Frame>

                <Frame BackgroundColor="{StaticResource White}"
                       HasShadow="True"
                       CornerRadius="15"
                       Padding="0"
                       MaximumWidthRequest="350"
                        HorizontalOptions="Fill">
                    <Entry x:Name="txtPassword"
                           Placeholder="Contraseña"
                           IsPassword="True"
                           FontSize="16"
                           TextColor="{StaticResource Gray600}"
                           PlaceholderColor="{StaticResource Gray400}"
                           HeightRequest="50"
                           BackgroundColor="Transparent"/>
                </Frame>

                <Frame BackgroundColor="{StaticResource White}"
                       HasShadow="True"
                       CornerRadius="15"
                       Padding="0"
                       MaximumWidthRequest="350"
                        HorizontalOptions="Fill">
                    <Entry x:Name="txtNombre"
                           Placeholder="Nombre completo"
                           FontSize="16"
                           TextColor="{StaticResource Gray600}"
                           PlaceholderColor="{StaticResource Gray400}"
                           HeightRequest="50"
                           BackgroundColor="Transparent"/>
                </Frame>

                <Frame BackgroundColor="{StaticResource White}"
                       HasShadow="True"
                       CornerRadius="15"
                       Padding="0"
                       MaximumWidthRequest="350"
                        HorizontalOptions="Fill">
                    <Entry x:Name="txtDireccion"
                           Placeholder="Dirección"
                           FontSize="16"
                           TextColor="{StaticResource Gray600}"
                           PlaceholderColor="{StaticResource Gray400}"
                           HeightRequest="50"
                           BackgroundColor="Transparent"/>
                </Frame>

                <Frame BackgroundColor="{StaticResource White}"
                       HasShadow="True"
                       CornerRadius="15"
                       Padding="0"
                       MaximumWidthRequest="350"
                       HorizontalOptions="Fill">
                    <Entry x:Name="txtTelefono"
                           Placeholder="Teléfono"
                           Keyboard="Telephone"
                           FontSize="16"
                           TextColor="{StaticResource Gray600}"
                           PlaceholderColor="{StaticResource Gray400}"
                           HeightRequest="50"
                           BackgroundColor="Transparent"/>
                </Frame>
                
                <Frame BackgroundColor="{StaticResource White}"
                       HasShadow="True"
                       CornerRadius="15"
                       Padding="0"
                       MaximumWidthRequest="350"
                       HorizontalOptions="Fill">
                    <Entry x:Name="txtEmail"
                           Placeholder="Email"
                           Keyboard="Email"
                           FontSize="16"
                           TextColor="{StaticResource Gray600}"
                           PlaceholderColor="{StaticResource Gray400}"
                           HeightRequest="50"
                           BackgroundColor="Transparent"/>
                </Frame>

                <Image x:Name="imgFotoPerfil"
                       HeightRequest="150"
                       WidthRequest="150"
                       Aspect="AspectFill"
                       BackgroundColor="LightGray"
                       HorizontalOptions="Center"
                       Margin="0,10"/>
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Button Text="Tomar foto" Clicked="OnTomarFotoClicked" BackgroundColor="{StaticResource PrimaryBlue}" TextColor="White"/>
                    <Button Text="Seleccionar foto" Clicked="OnSeleccionarFotoClicked" BackgroundColor="{StaticResource PrimaryBlue}" TextColor="White"/>
                </HorizontalStackLayout>
                
                <Button x:Name="btnRegistro"
                        Text="Registrarse"
                        BackgroundColor="{StaticResource PrimaryBlue}"
                        TextColor="{StaticResource TextOnPrimary}"
                        FontSize="18"
                        FontAttributes="Bold"
                        HeightRequest="55"
                        CornerRadius="15"
                        MaximumWidthRequest="350"
                        HorizontalOptions="Center"
                        Clicked="OnRegistroClicked">
                    <Button.Shadow>
                        <Shadow Brush="{StaticResource PrimaryBlue}" Offset="0,4" Radius="10" Opacity="0.3"/>
                    </Button.Shadow>
                </Button>

                <Label x:Name="lblResultado"
                       Text=""
                       TextColor="Red"
                       HorizontalOptions="Center"/>

            </StackLayout>

        </Grid>
    </ScrollView>
</ContentPage>
