<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="obligatorio.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="Bienvenidos"
               FontSize="28"
               HorizontalOptions="Center" />
            <Label Text="Usa el menú para navegar"
               FontSize="18"
               HorizontalOptions="Center" />
            <Button
                x:Name="btnClima"
                Text="Clima" 
                Clicked="IrAClima"
                HorizontalOptions="Fill" />
            
            <Button Text="Cotizaciones" Clicked="IrACotizaciones" />
            <Button Text="Noticias" Clicked="IrANoticias" />
            <Button Text="Cine" Clicked="IrACine" />
            <Button Text="Patrocinadores" Clicked="IrAPatrocinadores" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
