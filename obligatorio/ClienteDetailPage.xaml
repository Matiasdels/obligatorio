<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="obligatorio.ClienteDetailPage"
             Title="Detalle Cliente"
             Shell.NavBarIsVisible="True">
    

    <StackLayout Padding="20" Spacing="15">

        <Entry x:Name="txtNombre" Placeholder="Nombre completo"/>
        <Entry x:Name="txtEmail" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="txtTelefono" Placeholder="Teléfono" Keyboard="Telephone"/>

        <Button Text="Guardar" Clicked="btnGuardar_Clicked"
                BackgroundColor="{StaticResource PrimaryBlue}" 
                TextColor="White" CornerRadius="15" HeightRequest="50"/>

        <Button Text="Eliminar" Clicked="OnEliminarClicked"
        BackgroundColor="Red" TextColor="White" CornerRadius="15" HeightRequest="50"
        IsVisible="False"
        x:Name="btnEliminar"/>
        <Button
                x:Name="btnAtras" 
                Text="← Volver atrás" 
                Clicked="btnAtras_Clicked"
                Style="{StaticResource AppPrimaryButton}"
                HeightRequest="45"
                Margin="20,10,20,15"/>
    </StackLayout>
</ContentPage>
