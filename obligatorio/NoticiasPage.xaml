<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="obligatorio.NoticiasPage"
             Title="NoticiasPage">

    <VerticalStackLayout Padding="20">

        <Label Text="ðŸ“° Ãšltimas Noticias"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="#0D47A1"
               HorizontalOptions="Center"
               Margin="0,0,0,10" />

        <ActivityIndicator IsRunning="{Binding IsBusy}" 
                           IsVisible="{Binding IsBusy}" 
                           Color="#1976D2"
                           HeightRequest="40"/>

        <CollectionView ItemsSource="{Binding Noticias}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="#1976D2"
                           CornerRadius="20"
                           Margin="0,8"
                           Padding="12"
                           HasShadow="True">
                        <VerticalStackLayout>
                            <Label Text="{Binding Title}" 
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#0D47A1" />
                            <Label Text="{Binding Description}" 
                                   FontSize="14"
                                   TextColor="#333"
                                   LineBreakMode="WordWrap" 
                                   MaxLines="3" />
                            <Label Text="{Binding PubDate}" 
                                   FontSize="12"
                                   TextColor="#1976D2"
                                   HorizontalOptions="End" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button 
                x:Name="btnAtras"
                Text="â¬… Volver"
                Clicked="btnNoticiasAtras_Clicked"
                BackgroundColor="#1976D2"
                TextColor="White"
                CornerRadius="20"
                Margin="0,10,0,0" />

    </VerticalStackLayout>
