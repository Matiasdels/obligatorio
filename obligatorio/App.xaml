<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:obligatorio"
             x:Class="obligatorio.App">
    
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />

            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="NataSans"/>
            </Style>

            <!-- Estilo global para Button -->
            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="NataSans"/>
            </Style>

            <!-- Estilo global para Entry -->
            <Style TargetType="Entry">
                <Setter Property="FontFamily" Value="NataSans"/>
            </Style>

            <Color x:Key="LightPageBackgroundColor">#FFFFFF</Color>
            <Color x:Key="LightCardBackgroundColor">#F8F9FA</Color>
            <Color x:Key="LightPrimaryTextColor">#212529</Color>
            <Color x:Key="LightSecondaryTextColor">#6C757D</Color>
            <Color x:Key="LightInputBackgroundColor">#FFFFFF</Color>
            <Color x:Key="LightBorderColor">#DEE2E6</Color>

            <!-- Colores para Tema Oscuro -->
            <Color x:Key="DarkPageBackgroundColor">#121212</Color>
            <Color x:Key="DarkCardBackgroundColor">#1E1E1E</Color>
            <Color x:Key="DarkPrimaryTextColor">#FFFFFF</Color>
            <Color x:Key="DarkSecondaryTextColor">#AAAAAA</Color>
            <Color x:Key="DarkInputBackgroundColor">#2C2C2C</Color>
            <Color x:Key="DarkBorderColor">#404040</Color>

            <!-- Colores de Acento (iguales para ambos temas) -->
            <Color x:Key="AccentColor">#007BFF</Color>
            <Color x:Key="SecondaryColor">#6C757D</Color>
            <Color x:Key="SuccessColor">#28A745</Color>
            <Color x:Key="WarningColor">#FFC107</Color>
            <Color x:Key="DangerColor">#DC3545</Color>

            <!-- Recursos Dinámicos que cambian según el tema -->
            <ResourceDictionary x:Key="Light">
                <Color x:Key="PageBackgroundColor">#FFFFFF</Color>
                <Color x:Key="CardBackgroundColor">#F0F0F0</Color>
                <Color x:Key="PrimaryTextColor">#000000</Color>
                <Color x:Key="SecondaryTextColor">#666666</Color>
                <Color x:Key="InputBackgroundColor">#EAEAEA</Color>
                <Color x:Key="BorderColor">#CCCCCC</Color>
            </ResourceDictionary>

            <ResourceDictionary x:Key="Dark">
                <Color x:Key="PageBackgroundColor">#000000</Color>
                <Color x:Key="CardBackgroundColor">#1E1E1E</Color>
                <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
                <Color x:Key="SecondaryTextColor">#AAAAAA</Color>
                <Color x:Key="InputBackgroundColor">#2C2C2C</Color>
                <Color x:Key="BorderColor">#444444</Color>
            </ResourceDictionary>

            <!-- Convertidores útiles -->
            <!--<local:InverseBoolConverter x:Key="InverseBoolConverter" />
            <local:BoolToStatusConverter x:Key="BoolToStatusConverter" />
            <local:BoolToColorConverter x:Key="BoolToColorConverter" />-->

            <!-- Factor de escala de texto (para tamaños de texto dinámicos) -->
            <x:Double x:Key="TextSizeScale">1.0</x:Double>


            <!-- Convertidores útiles -->
            <!--<local:InverseBoolConverter x:Key="InverseBoolConverter" />-->
        </ResourceDictionary>
    </Application.Resources>
</Application>
